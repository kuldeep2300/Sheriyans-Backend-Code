<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD Application</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      html,
      body {
       
      }
    </style>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a href="/" class="text-blue-500">Back To Home</a>
        <h1 class="text-3xl mt-10 tracking-tighter mb-3">All Users</h1>
        <div class="users flex flex-wrap gap-4 ">
         <% if(users.length > 0) { %>
           <% users.forEach((user) => { %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-52 rounded-lg bg-zinc-500">
                  <img src="<%= user.image %>" alt="image" class="w-full h-full object-cover rounded-lg overflow-hidden">
                </div>
                <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
                <h5 class="text-zinc-500 "><%= user.email %></h5>

                <div class="flex gap-3 mt-5">
                    <a href="/edit/<%= user._id %>" class="text-zinc-200 hover:text-zinc-400">Edit User</a>
                    <a href="/delete/<%= user._id%>" class="text-red-500 hover:text-red-700">Delete User</a>
                </div>
            </div>
           <%}) %>
         <% } else { %>
          <h3 class="text-xl tracking-tighter text-zinc-500 ">No Users Yet.</h3>
         <% } %> 
        </div>
    </div>
  </body>
</html>
